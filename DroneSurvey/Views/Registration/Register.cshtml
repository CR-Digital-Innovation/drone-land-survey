@model DroneSurvey.Models.Register
@{
    Layout = null;
}

<html>
<head>
    <title>
        CriticalRiver
    </title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">

    <style>
        .form_error {
            border-color: red;
            border: 1px solid red !important;
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
            <img src="~/images/AP_TransBG.png" alt="">
        </div>
        <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
            <img src="~/images/critical_river_final.svg" alt="" style="margin-top:15%" width="230" height="41">
        </div>
    </div>
    <div class="container" style="padding-bottom: 100px !important;">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                @using (Html.BeginForm("Register", "Registration", FormMethod.Post, new { id = "frmReg" }))
                {
                    <div class="card">
                        <h5 class="card-header page-header">DRONE VENDOR REGISTRATION FORM</h5>
                        <div class="card-body">
                            @* <h5 class="card-title">Special title treatment</h5>
                        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>*@
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label>First Name</label>
                                        @Html.TextBoxFor(m=>m.FirstName, new { @class = "form-control", id = "txtFirstName" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        @Html.TextBoxFor(m=>m.LastName, new { @class = "form-control", id = "txtLastName" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label>Email Id</label>
                                        @Html.TextBoxFor(m=>m.Email, new { @class = "form-control", id = "txtEmail" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label>Phone</label>
                                        @Html.TextBoxFor(m=>m.PhoneNumber, new { @class = "form-control", id = "txtPhoneNumber" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-lg-12">
                                    <div class="form-group">
                                        <label>Address</label>
                                        @Html.TextBoxFor(m=>m.AddressLine1, new { @class = "form-control", id = "txtAddressLine1" })
                                        <br />
                                        @Html.TextBoxFor(m=>m.AddressLine2, new { @class = "form-control", id = "txtAddressLine2" })

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label>City</label>
                                        @Html.TextBoxFor(m=>m.City, new { @class = "form-control", id = "txtCity" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label>State</label>
                                        @Html.TextBoxFor(m=>m.State, new { @class = "form-control", id = "txtState" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-lg-12">
                                    <div class="form-group">
                                        <label>Vendor Name</label>
                                        @Html.TextBoxFor(m=>m.VendorName, new { @class = "form-control", id = "txtVendorName" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-lg-12">
                                    <div class="form-group">
                                        <label>Drone Details</label>
                                        @Html.TextBoxFor(m=>m.DroneDetails, new { @class = "form-control", id = "txtDroneDetails" })
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row" style="display: flex;justify-content: space-around;">
                                <input type="button" id="btnSubmit" class="btn-custom btn btn-primary" style="background:#FF6801;border-color:#FF6801; color:White; width:77px; margin-left:14px;" value="Register" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <footer class="fixed-bottom page-footer font-small blue">
        <div class="container-fluid text-center text-md-left">
            <div class="row footer-copyright text-center">
                <div class="col-sm-12 col-md-12 col-sm-12 footerCl">&copy;&nbsp;Copyright @DateTime.Now.Year - CriticalRiver </div>
            </div>
        </div>
    </footer>
    <script src="~/js/jquery-3.5.1.slim.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js" type="text/javascript"></script>

</body>
<script type="text/javascript">
    $(document).ready(function() {
        
        $("#btnSubmit").click(function() {
            if (validateForm()) {
                $("#frmReg").submit();
            }
        });

        //remove validation error on focus
        $("#txtFirstName").focus(function() {
            $('#txtFirstName').removeClass("form_error");
        });
        $("#txtLastName").focus(function() {
            $('#txtLastName').removeClass("form_error");
        });
        $("#txtEmail").focus(function() {
            $('#txtEmail').removeClass("form_error");
        });
        $("#txtPhoneNumber").focus(function() {
            $('#txtPhoneNumber').removeClass("form_error");
        });

    });




    //validate all textbox and textareas
    function validateForm() {
        var isValid = true;

        if ($("#txtFirstName").val().length == 0) {
            $("#txtFirstName").addClass("form_error");
            isValid = false;
        }
        if ($("#txtLastName").val().length == 0) {
            $("#txtLastName").addClass("form_error");
            isValid = false;
        }
        if ($("#txtEmail").val().length == 0) {
            $("#txtEmail").addClass("form_error");
            isValid = false;
        }
        if ($("#txtPhoneNumber").val().length == 0) {
            $("#txtPhoneNumber").addClass("form_error");
            isValid = false;
        }
        return isValid;
    }


</script>
</html>
